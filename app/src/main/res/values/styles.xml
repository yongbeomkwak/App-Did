<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppDid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>

        <!-- Status bar color.  windowTranslucentStatus 투명 설정-->
        <item name="android:statusBarColor" tools:targetApi="l">#9A0C8EF1</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 검은화면 제거-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 앱 실행 시 처음 잠깐 나오는 하얀 화면 없애기-->
    </style>
</resources>